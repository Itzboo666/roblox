local function getSpecificTasks()
    openTasksPanel()
    local tasksPanel = findTasksPanel()
    
    if not tasksPanel then return {} end
    
    -- These are the tasks we want to track
    local targetTasks = {
        "Blow 78,000,000 Bubbles",
        "Hatch 450 Cyber Eggs",
        "Hatch 1,250 Eggs",
        "Hatch 350 Rainbow Eggs"
    }
    
    local foundTasks = {}
    
    for _, descendant in ipairs(tasksPanel:GetDescendants()) do
        if descendant:IsA("TextLabel") then
            for _, target in ipairs(targetTasks) do
                if descendant.Text:find(target, 1, true) then -- simple substring match
                    local text = descendant.Text
                    local percentage = text:match("(%d+)%%") or "0"
                    
                    table.insert(foundTasks, {
                        name = target,
                        percentage = tonumber(percentage),
                        fullText = text
                    })
                end
            end
        end
    end
    
    return foundTasks
end

-- Print the specific tasks we care about
local importantTasks = getSpecificTasks()
for _, task in ipairs(importantTasks) do
    print(string.format("%s - %d%% complete", task.name, task.percentage))
end
